#!/bin/bash

echo "running a temporary db container (talus-db)"

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

$DIR/stop

sudo mkdir -p /talus/data

sudo docker run \
	--rm \
	-v /var/log/talus:/talus/logs \
	-v /talus/data:/talus/data \
	--net talus_default \
	--name talus-db \
	--hostname talus-db \
	-p 27017:27017 \
	$@ talus/talus-db
